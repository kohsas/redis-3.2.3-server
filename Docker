FROM ashsat/redis-base-3.2.3:latest

# copied from https://github.com/HVF/docker-pub/blob/master/redis/standalone/Dockerfile
# and then modified

EXPOSE 6379
VOLUME ["/data"]
RUN sysctl vm.overcommit_memory=1
ENTRYPOINT ["/usr/local/bin/redis-server", "--dir", "/data"]

#
# build:  docker build -t aashsat/redis-3.2.3-server .
# run:    docker run -d -P -v ~/data/redis0:/data -name=redis0 ashsat/redis-3.2.3-server
#
